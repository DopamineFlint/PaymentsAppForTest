<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:layout_margin="5dp" app:cardBackgroundColor="@android:color/holo_red_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/desc_text_view"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/amount_text_view"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc_text_view" />

        <TextView
            android:id="@+id/currency_text_view"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="currency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount_text_view" />

        <TextView
            android:id="@+id/created_text_view"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="created"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currency_text_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>